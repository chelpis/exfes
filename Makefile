CC = gcc

CFLAGS = -std=c99
CFLAGS += -Wall -Wextra -Wpedantic
CFLAGS += -O3
CFLAGS += -Ilib/

LIB_OBJS = \
wrapper.o \
idx_LUT.o \
exfes.o \
common.o \
binomials.o \
autogenerated_c-tester_deg_2.o \
autogenerated_c-sequential_deg_2.o

OBJS = $(foreach o,$(LIB_OBJS),objs/lib/$(o))

TESTS = test1 test2 omp1

SAMPLE = sample1

all: $(SAMPLE) $(TESTS)

$(SAMPLE): %:objs/samples/%.o $(OBJS) | DIRS
	@echo 'Linking $@...'
	$(CC) -o bin/$@ $< $(OBJS)

$(TESTS): %:objs/tests/%.o $(OBJS) | DIRS
	@echo 'Linking $@...'
	$(CC) -fopenmp -o bin/$@ $< $(OBJS)

objs/tests/%.o: tests/%.c $(OBJS) | DIRS
	@echo 'Building $@...'
	$(CC) $(CFLAGS) -fopenmp -c $< -o $@

objs/samples/%.o: samples/%.c $(OBJS) | DIRS
	@echo 'Building $@...'
	$(CC) $(CFLAGS) -c $< -o $@

objs/lib/%.o: lib/%.c | DIRS
	@echo 'Building $@...'
	$(CC) $(CFLAGS) -c $< -o $@

DIRS:
	@mkdir -p objs
	@mkdir -p objs/lib
	@mkdir -p objs/tests
	@mkdir -p objs/samples
	@mkdir -p bin

.PHONY: clean
clean:
	rm -rf objs bin
